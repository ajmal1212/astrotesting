---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

---
// No JS needed unless interactivity is added separately
---

<nav class="hs-dropdown relative flex items-center justify-between px-2 py-2.5 [--auto-close:inside] [--gpu-acceleration:false] [--strategy:absolute] lg:[--strategy:static]">
  <a href="/" class="logo-wrapper has-hover-animation flex items-center gap-2">
    <img src="/_astro/logo.AHWChQ58_Z2vRB0x.svg" alt="Brand logo of upstart" class="logo" width="32" height="32" style="--w: 32; --h: 32; --fit: cover; --pos: center;" />
    <span class="logo-text text-white font-bold text-xl">Upstart</span>
  </a>

  <ul id="nav-menu" class="navbar flex gap-6 items-center max-lg:absolute max-lg:bg-black max-lg:w-full max-lg:top-full max-lg:left-0 max-lg:p-4 hidden lg:flex">
    <li class="nav-item"><a href="/" class="nav-link text-white hover:text-gray-300">Home</a></li>
    <li class="hs-dropdown nav-dropdown relative group">
      <button class="nav-dropdown-toggle flex items-center text-white hover:text-gray-300">
        Features
        <svg class="ml-2 h-4 w-4 transition-transform group-hover:rotate-180" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 512 512"><path d="M256 294.1L383 167c9.4-9.4 24.6-9.4 33.9 0s9.3 24.6 0 34L273 345c-9.1 9.1-23.7 9.3-33.1.7L95 201.1c-4.7-4.7-7-10.9-7-17s2.3-12.3 7-17c9.4-9.4 24.6-9.4 33.9 0l127.1 127z"/></svg>
      </button>

      <!-- Mega Menu -->
      <div class="mega-menu absolute left-0 top-full mt-2 hidden group-hover:block bg-theme-dark text-white p-5 rounded-xl shadow-lg w-[320px] z-50">
        <ul class="space-y-3">
          <li>
            <a href="/features/" class="flex gap-4 items-start hover:bg-white/5 rounded-lg p-3">
              <span class="inline-block min-w-4">
                <svg class="h-4 w-4 text-white brightness-0 invert" xmlns="http://www.w3.org/2000/svg" fill="red" viewBox="0 0 16 16"><path d="M8.72727 0L8.728 2.22691..."/></svg>
              </span>
              <div>
                <div class="font-semibold text-lg">Focus on What Matters</div>
                <p class="text-sm opacity-60">Upstart tracks the essential website metrics you care about.</p>
              </div>
            </a>
          </li>
          <!-- Add more <li> blocks as needed -->
        </ul>
      </div>
    </li>
  </ul>
</nav>
